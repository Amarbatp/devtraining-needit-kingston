        <run_type>daily</run_type>
        <script><![CDATA[var howLongToClose = gs.getProperty('x_58872_needit.autoCloseOverdue');
var t = new GlideRecord('x_58872_needit_needit_task');
t.addQuery('due_date', '<=', gs.daysAgo(howLongToClose));
t.addQuery('state', '<', 3);
t.query();
while (t.next()) {
	gs.info('Auto close NeedIt Task record = ' + t.number);
	t.work_notes = "Record closed because it was too far past the Due Date";
	t.state = 4;
	t.update();
}]]></script>
